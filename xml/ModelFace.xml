<model name="Face">
    <pgroup name="Eyes">
        <prop name="Spacing" min=".2" max=".4" />
        <prop name="Depth" min=".5" max=".7" />
        <prop name="Size" min=".1" max=".2" />
        <prop name="Bottom" min="-PI/2" max="-PI/8" default="-PI/4" />
        <val name="Corner">
            Spacing + Size
        </val>
        <angleval name="Corner_Angle">
            <x>Corner</x>
            <z>Depth</z>
        </angleval>
    </pgroup>
    <pgroup name="Brow">
        <prop name="Outer_Depth" min=".7" max=".9" />
        <prop name="Height" min=".1" max=".2" />
    </pgroup>
    <pgroup name="Jaw">
        <prop name="Width" min=".8" max="1.2" />
        <prop name="Height" min="-.7" max="-.5" />
        <prop name="Length" min=".7" max="1.0" default=".8"/>
        <prop name="Angle" min=".26 + PI/2" max=".66 + PI/2" />
    </pgroup>
    <pgroup name="Neckline">
        <prop name="Width" min=".7" max="1.1" />
        <prop name="Height" min="-.1" max="0" />
        <prop name="Length" min=".3" max=".6" default=".4"/>
        <prop name="Angle" min=".3 + PI/2" max=".8 + PI/2" />
    </pgroup>
    <pgroup name="Neck">
        <prop name="Fatness" min="-.1" max=".1" />
    </pgroup>

    <section name="Eyes" pgroup="Eyes">
        <sphere reflect="both">
            <center x="Eyes.Spacing" y="0" z="Eyes.Depth" />
            <radius>Eyes.Size</radius>
        </sphere>
    </section>
    <section name="Brow" pgroup="Brow">
        <bezier res="7" reflect="both">
            <point>
                <x>Eyes.Corner</x>
                <y>0</y>
                <z>Eyes.Depth</z>
            </point>
            <point type="cyl">
                <r>Brow.Outer_Depth</r>
                <theta>Eyes.Corner_Angle.theta</theta>
                <z>Brow.Height / 2</z>
            </point>
            <point type="cyl">
                <r>Brow.Outer_Depth</r>
                <theta>Eyes.Corner_Angle.theta</theta>
                <z>Brow.Height</z>
            </point>
        </bezier>
    </section>
    <section name="Jaw" pgroup="Jaw">
        <parab res="15" name="Jaw">
            <center x="0" y="Jaw.Height" z="0" />
            <width>Jaw.Width</width>
            <length>Jaw.Length</length>
            <angle>Jaw.Angle</angle>
        </parab>
    </section>
    <section name="Neckline" pgroup="Neckline">
        <parab res="15" name="Neckline">
            <center x="0" z="0">
                <y>Jaw.Height + Neckline.Height</y>
            </center>
            <width>Neckline.Width</width>
            <length>Neckline.Length</length>
            <angle>Neckline.Angle</angle>
        </parab>
    </section>
    <section name="Neck" pgroup="Neck">
        <parab res="15" name="Neck" visible="false">
            <center x="0" z="0">
                <y>Jaw.Height + Neckline.Height/2</y>
            </center>
            <width>Jaw.Width</width>
            <length>Jaw.Length/2 + Neckline.Length/2 + Neck.Fatness</length>
            <angle>Jaw.Angle/2 + Neckline.Angle/2</angle>
        </parab>
        <bezier res="7">
            <point type="cyl">
                <r>ParabR:Jaw 0</r>
                <theta>0</theta>
                <z>ParabZ:Jaw 0</z>
            </point>
            <point type="cyl">
                <r>ParabR:Neck 0</r>
                <theta>0</theta>
                <z>ParabZ:Neck 0</z>
            </point>
            <point type="cyl">
                <r>ParabR:Neckline 0</r>
                <theta>0</theta>
                <z>ParabZ:Neckline 0</z>
            </point>
        </bezier>
    </section>
</model>
